@{
    ViewBag.Title = "Categories";
}

<div id="summary" class="section panel panel-primary" data-bind="if: model.displaySummary">
    <div class="panel-heading">Category summery</div>
    <div class="panel-body">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>Category Id</th>
                    <th>Category Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: model.categories">
                <tr>
                    <td data-bind="text: CategoryId" />
                    <td data-bind="text: CategoryName" />
                    <td data-bind="text: Description" />
                    <td>
                        <button class="btn btn-xs btn-primary" data-bind="click: deleteCategory">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
        <button class="btn btn-primary" data-bind="click: hideSummary">Create category</button>
    </div>
</div>

<div id="editor" class="section panel panel-primary" data-bind="ifnot: model.displaySummary">
    <div class="panel panel-heading">
        Create category
    </div>
    <div class="panel-body">
        <div class="form-group">
            <label>Category name</label>
            <input class="form-control" data-bind="value: model.newCategory.categoryName"/>
        </div>
        <div class="form-group">
            <label>Description</label>
            <input class="form-control" data-bind="value: model.newCategory.description"/>
        </div>
        <button class="btn btn-primary" data-bind="click: createCategory">Save</button>
    </div>
</div>